{
    "index_patterns": ["messages-tickets-*"],
    "template": {
        "settings": {
            "index": {
                "number_of_shards": 3,
                "number_of_replicas": 1,
                "routing_partition_size": 1
            },
            "analysis": {
                "filter": {
                    "stop_filter": {
                        "type": "stop",
                        "stopwords": [
                            "_arabic_",
                            "_cjk_",
                            "_english_",
                            "_french_",
                            "_russian_",
                            "_spanish_"
                        ]
                    }
                },
                "analyzer": {
                    "msg_text": {
                        "type": "custom",
                        "tokenizer": "standard",
                        "filter": [
                            "lowercase",
                            "stop_filter"
                        ]
                    }
                }
            }
        },
        "mappings": {
            "_routing": {
                "required": true
            },
            "properties": {
                "contact_uuid": {
                    "type": "keyword"
                },
                "text": {
                    "type": "text",
                    "analyzer": "msg_text"
                }
            }
        }
    }
}
