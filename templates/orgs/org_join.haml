-extends "smartmin/base.html"
-load i18n smartmin

-block title
  {{title}}

-block content
  .formax
    .formax-section.open
      .formax-icon.bg-gray-100.flex.flex-row.items-stretch
        .margin-wrapper
          .i-container.icon-user
      .formax-container.flex-grow
        .formax-summary
          -trans "Sign in"
        .formax-form
          %form#login-form{method:"post", action:"{% url 'users.user_login' %}?next={% url 'orgs.org_join_accept' secret %}"}
            %fieldset
              .control-group
                %temba-field(disabled="true" name="username" label="{% trans 'Email Address' %}" value="{{email}}")
                  .px-1.py-2
                    {{email}}
                  .hidden
                    %input(type="text" name="username" maxlenght="150" value="{{email}}")


              .control-group
                %temba-textinput#id_password(type="password" name="password" label="{% trans 'Password' %}" placeholder="{% trans 'Your password, at least eight letters please' %}" password)
            -csrf_token
            %input.button-primary{type:"submit", value:"Login"}