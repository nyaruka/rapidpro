-extends 'includes/modal.html'
-load i18n temba smartmin

-block modal
  -if error
    .alert-text.mb-4
      .title
        -blocktrans trimmed with name=object.name
          Uh oh, we couldn't delete {{name}}.
      .message
        {{error}}

  -blocktrans trimmed with name=object.name
    Are you sure you want to delete <b>{{name}}</b>?
    The labels listed below will be permanently removed.
  %ul.mt-4
    -if object.is_folder
      %li
        <b>[{{object.name}}]<b>
    - else
      %li.ml-4
        <b>{{object.name}}<b>
    - for child in object.get_active_children_labels
      %li.ml-4
        <b>{{child.name}}<b>

  .hidden
    %form(method="POST")
      %input(type="submit" value="{{submit_button_name}}")
