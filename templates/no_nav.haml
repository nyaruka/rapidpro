-extends "frame.haml"

-load smartmin i18n
-block header

-block extra-style
  {{block.super}}
  :css
    .logo {
      color: #fff !important;
    }

    .content-card {
      margin: 4em;
    }

    .alert {
      background: #f7f7f7;
      border: none;
      color: rgba(0, 0, 0, 0.5);
      text-shadow: none;
      border-radius: 0px;
      border-bottom: solid 1px #e2e2e2;
      padding: 8px 22px;
      margin: 0;
      z-index: 10;
      width: 100%;
    }
  
-block page-container
  -if messages
    -for msg in messages
      %div{class:"alert alert-{{ message.tags }}"}
        {{ msg }}

  .flex.flex-col.h-full  
    .top.flex-shrink.flex-grow
    .middle.flex.flex-row.mb-10
      .flex-grow
      .content-card
        .mb-4.logo
          %a(href="/")
            %svg
              %use(href="{{STATIC_URL}}{{ brand.logo }}")
        .page-title
          -block title
        -block content
      .flex-grow
          
    .bottom(style="flex-grow: 3")
      .flex.flex-col.h-full
        .flex-grow

        .bottom
          -block footer
            {{block.super}}
